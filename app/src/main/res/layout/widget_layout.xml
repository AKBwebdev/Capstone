<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/widget_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWidgetBackground"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/widget_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/widget_img_launcher"
                android:layout_width="@dimen/dimen_32dp"
                android:layout_height="@dimen/dimen_32dp"
                android:layout_gravity="center_vertical"
                android:background="@color/colorPrimary"
                android:padding="@dimen/dimen_6dp"
                android:src="@drawable/ic_task_checking"/>

            <TextView
                android:id="@+id/textview_widget_header"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dimen_8dp"
                android:text="@string/title_pending_tasks"
                android:textSize="@dimen/textsize_medium"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>

        <ListView
            android:id="@+id/listview_widget"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>

        <TextView
            android:id="@+id/textview_empty_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/dimen_8dp"
            android:text="@string/info_empty_widget"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/textsize_xsmall"
            android:visibility="gone"/>
    </LinearLayout>

</FrameLayout>